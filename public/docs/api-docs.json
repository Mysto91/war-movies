{
    "openapi": "3.0.0",
    "info": {
        "title": "Api Documentation",
        "description": "Implementation of Swagger with in Laravel",
        "contact": {
            "email": "etiennetran@hotmail.fr"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/articles": {
            "get": {
                "tags": [
                    "Tests"
                ],
                "summary": "Get list of articles",
                "description": "Returns all articles.",
                "operationId": "getAllArticles",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Article"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "not found"
                    }
                }
            },
            "post": {
                "tags": [
                    "Tests"
                ],
                "summary": "Create an article",
                "description": "Create an article.",
                "operationId": "createArticle",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Article": {
                "description": "App\\Models\\Article",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": "true"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "rate": {
                        "type": "string"
                    },
                    "format": {
                        "type": "string"
                    },
                    "trailerUrl": {
                        "type": "string"
                    },
                    "imageUrl": {
                        "type": "string"
                    },
                    "releaseDate": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string",
                        "readOnly": "true"
                    },
                    "updatedAt": {
                        "type": "string",
                        "readOnly": "true"
                    },
                    "links": {
                        "type": "array",
                        "items": {
                            "properties": {
                                "rel": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                },
                                "href": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "readOnly": "true"
                    }
                },
                "type": "object"
            }
        }
    }
}